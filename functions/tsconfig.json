{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true
  },

  "include": ["src/**/*", "examples/**/*", "test/**/*"],
  "exclude": ["node_modules", "test/**/*"]
}
