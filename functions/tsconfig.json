{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "types": ["jest", "node"]
  },
  "include": ["src/**/*", "test/**/*"]
}
